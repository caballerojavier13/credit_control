<div class="row" style="background: #eee; border-radius: 5px; padding-top: 20px; padding-bottom: 10px; margin-bottom: 20px;">
  <div class="col-md-1"></div>
  <div class="col-md-10">
        <%= form_for(@person, :html => {:class => 'form-horizontal'})  do |f| %>
        <% if @person.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <p>Problem to save.</p>
            </div>
        <% end %>

        <% if @person.errors[:name].to_a.size > 0 %>
            <div class="form-group has-error">
        <% else %>
            <div class="form-group">
        <% end %>
            <%= f.label :name, class:'col-sm-1 control-label' %>
            <div class="col-sm-6">
                <%= f.text_field :name, class:'form-control'%>
                  <% if @person.errors[:name].to_a.size > 0 %>
                      <p style="color: #a94442"><%= @person.errors[:name].to_a.at(0).to_s.capitalize! %></p>
                  <% end %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-2 col-xs-6 ">
              <%= f.submit 'Submit', :class => 'btn btn-block btn-success' %>
            </div>
            <div class="col-sm-2 col-xs-6">
              <%= link_to 'Back', people_path, :class => 'btn btn-default btn-block'  %>
            </div>
          </div>

        <% end %>
    </div>
</div>